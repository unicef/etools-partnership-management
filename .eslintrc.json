{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "html"
    ],
    "extends": "./node_modules/eslint-config-google/index.js",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "Polymer": true,
        "_": true,
        "Dexie": true,
        "etoolsBehaviors": true,
        "EtoolsLogsBehavior": true,
        "EtoolsPmpApp": true,
        "EtoolsAjaxRequestBehavior": true,
        "etoolsAjaxDefaultDexieDbPrefix": true,
        "moment": true,
        "App": true
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "never"],
        "max-len": ["error", { "code": 120 }],
        "valid-jsdoc": 0,
        "new-cap": ["error", {"capIsNewExceptions": ["Polymer"]}]
    }
}
